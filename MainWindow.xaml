<Window
    x:Class="Task_manager.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Task_manager"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="1100"
    Height="550"
    Background="LightGray"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width=".05*" />
            <ColumnDefinition Width=".15*" />
            <ColumnDefinition Width=".35*" />
            <ColumnDefinition Width=".15*" />
            <ColumnDefinition Width=".3*" />

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height=".15*" />
            <RowDefinition Height=".175*" />
            <RowDefinition Height=".675*" />
        </Grid.RowDefinitions>
        <Rectangle
            Grid.Row="1"
            Grid.RowSpan="2"
            Grid.Column="1"
            Grid.ColumnSpan="3"
            Fill="Gray"
            RadiusX="5"
            RadiusY="5"
            Stroke="FloralWhite"
            StrokeThickness="3" />
        <Border
            Grid.Row="1"
            Grid.Column="2"
            Margin="7"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Background="PaleGoldenrod"
            BorderBrush="Cornsilk"
            BorderThickness="5"
            CornerRadius="30">
            <TextBlock
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                FontFamily="Segoe UI"
                FontSize="55"
                FontWeight="Medium"
                Text="TASKS"
                TextAlignment="Center" />
        </Border>
        <Rectangle
            x:Name="HeaderRectangle"
            Grid.ColumnSpan="5"
            Fill="Gray" />
        <TextBlock
            Grid.Column="1"
            Grid.ColumnSpan="3"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            FontSize="50"
            FontWeight="Bold"
            Text="DOUG TASK MANAGER"
            TextAlignment="Center"
            TextWrapping="Wrap" />
        <Rectangle
            Grid.Row="1"
            Grid.RowSpan="2"
            Grid.Column="4"
            Fill="Gray"
            RadiusX="5"
            RadiusY="5"
            Stroke="FloralWhite"
            StrokeThickness="3" />
        <Border
            Grid.Row="1"
            Grid.Column="4"
            Margin="7"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Background="DeepSkyBlue"
            BorderBrush="DeepSkyBlue"
            BorderThickness="5"
            CornerRadius="25">
            <TextBlock
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                FontFamily="Segoe UI"
                FontSize="55"
                FontWeight="Medium"
                Text="CREATE"
                TextAlignment="Center" />
        </Border>
        <TextBlock
            Grid.Row="2"
            Grid.Column="5"
            Width="300"
            Height="35"
            Margin="0,0,0,300"
            Background="LightGray"
            FontSize="25"
            FontWeight="Medium"
            Text="TASK CONTENT"
            TextAlignment="Center" />
        <TextBlock
            Grid.Row="2"
            Grid.Column="5"
            Width="300"
            Height="35"
            Margin="0,0,0,100"
            Background="LightGray"
            FontSize="25"
            FontWeight="Medium"
            Text="TASK TITLE"
            TextAlignment="Center" />
        <TextBox
            x:Name="titleTextBox"
            Grid.Row="2"
            Grid.Column="5"
            Width="300"
            Height="50"
            Margin="0,0,00,0"
            FontSize="18"
            FontWeight="Medium"
            Text="Enter Title Here" />
        <TextBox
            x:Name="contentTextBox"
            Grid.Row="2"
            Grid.Column="5"
            Width="300"
            Height="50"
            Margin="0,0,00,200"
            FontSize="18"
            FontWeight="Medium"
            Text="Enter Content Here" />
        <Button
            Grid.Row="2"
            Grid.Column="4"
            Width="200"
            Height="50"
            Margin="0,200,0,0"
            Background="Purple"
            Click="CreateTaskButton_Click"
            Content="Generate"
            FontSize="30"
            FontWeight="Medium" />
        <Button
            x:Name="RefreshBtn"
            Grid.Column="5"
            Margin="75,10"
            Background="PowderBlue"
            BorderBrush="RoyalBlue"
            BorderThickness="2"
            Click="RefreshBtn_Click"
            Content="Refresh"
            FontSize="40"
            FontWeight="Bold" />
        <ScrollViewer
            Name="TaskScrollViewer"
            Grid.Row="2"
            Grid.Column="1"
            Grid.ColumnSpan="3"
            Margin="15"
            Background="GhostWhite"
            HorizontalScrollBarVisibility="Disabled"
            VerticalScrollBarVisibility="Auto">
            <StackPanel Name="TaskStackPanel" Orientation="Vertical" />
        </ScrollViewer>
    </Grid>
</Window>
