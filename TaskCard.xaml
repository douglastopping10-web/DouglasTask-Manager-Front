<UserControl
    x:Class="Task_manager.TaskCard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Task_manager"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="150"
    d:DesignWidth="400"
    mc:Ignorable="d">
    <Border
        Margin="5"
        Padding="10"
        Background="Gray"
        BorderBrush="Cornsilk"
        BorderThickness="3"
        CornerRadius="15">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <!--  Text  -->
                <ColumnDefinition Width="Auto" />
                <!--  Buttons  -->
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />

                <!--  Title  -->
                <RowDefinition Height="*" />
                <!--  ID section  -->
                <RowDefinition Height=".2*" />
                <!--  Content  -->
            </Grid.RowDefinitions>

            <!--  Title  -->
            <TextBlock
                x:Name="TitleBlock"
                Grid.Row="0"
                Grid.Column="0"
                Margin="0,0,0,5"
                FontSize="25"
                FontWeight="Bold"
                Text="TASK title" />
            <TextBlock
                x:Name="IDBlock"
                Grid.Row="2"
                Grid.Column="2"
                Margin="-20,-10,0,0"
                FontSize="15"
                FontWeight="Bold"
                Text="TASK ID" />

            <!--  Content  -->
            <TextBlock
                x:Name="ContentBlock"
                Grid.Row="1"
                Grid.Column="0"
                FontFamily="Segoe UI"
                FontSize="20"
                FontWeight="Medium"
                Text="Task content"
                TextWrapping="Wrap" />

            <TextBox
                x:Name="TitleEditBox"
                Grid.Row="0"
                Grid.Column="0"
                Margin="0,0,0,5"
                FontSize="25"
                FontWeight="Bold"
                Text="TASK title"
                Visibility="Collapsed" />

            <TextBox
                x:Name="ContentEditBox"
                Grid.Row="1"
                Grid.Column="0"
                AcceptsReturn="True"
                FontFamily="Segoe UI"
                FontSize="20"
                FontWeight="Medium"
                Text="Task content"
                TextWrapping="Wrap"
                Visibility="Collapsed" />

            <!--  Buttons  -->
            <StackPanel
                Grid.Row="0"
                Grid.RowSpan="2"
                Grid.Column="1"
                Margin="10,0,0,0"
                VerticalAlignment="Top"
                Orientation="Vertical">
                <Button
                    x:Name="EditButton"
                    Margin="0,5"
                    Padding="15,5"
                    Background="Chartreuse"
                    Content="Edit"
                    FontWeight="Bold" />
                <Button
                    x:Name="DeleteButton"
                    Margin="0,5"
                    Padding="15,5"
                    Background="Red"
                    Content="Delete"
                    FontWeight="Bold" />
            </StackPanel>
        </Grid>
    </Border>
</UserControl>

